procedure TForma_Retiro.Button11Click(Sender: TObject);
begin
  PlaySound(PChar(ExtractFilePath(Application.ExeName) + 'sonidos\button_click.wav'), 0, SND_FILENAME or SND_ASYNC);
  AgregarDigito('9');
